<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitysParaVendedores.MensajeriaVendedor">


    <TextView
        android:id="@+id/textView40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIDEO EN VIVO" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensajeria" />

    <GridView
        android:id="@+id/gridMensajeVendedor"
        android:layout_width="match_parent"
        android:layout_height="444dp"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtMensajeVendedor"
            android:layout_width="316dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnEnviarMensajeVendedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:icon="@android:drawable/ic_menu_send" />
    </LinearLayout>
</LinearLayout>