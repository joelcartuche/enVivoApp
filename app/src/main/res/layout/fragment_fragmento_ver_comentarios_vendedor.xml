<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout12"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activitysParaVendedores.fragmentos.FragmentoVerComentariosVendedor">

    <TextView
        android:id="@+id/tvFiltrarVerComentariosVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtrar por: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hsvGrupoRadioVerComentariosVendedor"
        app:layout_constraintBottom_toBottomOf="@+id/hsvGrupoRadioVerComentariosVendedor"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gridComentariosVerComentariosVendedor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hsvGrupoRadioVerComentariosVendedor"
        android:layout_marginTop="8dp"
        />

    <HorizontalScrollView
        android:id="@+id/hsvGrupoRadioVerComentariosVendedor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvFiltrarVerComentariosVendedor"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/rgVerComentariosVendedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/rbComentariosVerComentariosVendedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comentario" />
                <RadioButton
                    android:id="@+id/rbDenunciasVerComentariosVendedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Denuncia" />
                <RadioButton
                    android:id="@+id/rbGraficoVerComentariosVendedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GrÃ¡fico" />

            </RadioGroup>
        </LinearLayout>
    </HorizontalScrollView>


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/lineChartVerComentariosVendedor"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridComentariosVerComentariosVendedor" />

</androidx.constraintlayout.widget.ConstraintLayout>