<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="NombreProducto"
        app:layout_constraintEnd_toStartOf="@+id/txtNombreProductoCuadroAceptar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="410dp"
        android:layout_height="62dp"
        android:background="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/txtNombreProductoCuadroAceptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="113dp"
        android:layout_height="21dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="55dp"
        android:text="Cantidad:"
        app:layout_constraintBottom_toTopOf="@+id/btnAceptarPedidoCuadroAceptarPedido"
        app:layout_constraintEnd_toStartOf="@+id/txtCantidadPedidoCuadroAceptar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="113dp"
        android:layout_height="21dp"
        android:layout_marginTop="52dp"
        android:text="Precio:"
        app:layout_constraintEnd_toStartOf="@+id/txtPrecioCuadroAceptarPedido"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <EditText
        android:id="@+id/txtPrecioCuadroAceptarPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese el precio"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/txtDescripcionCuadroPedido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView34"
        app:layout_constraintTop_toBottomOf="@+id/txtCodigoPedidoCuadroAceptar" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="113dp"
        android:layout_height="21dp"
        android:layout_marginTop="48dp"
        android:text="CÃ³digo:"
        app:layout_constraintEnd_toStartOf="@+id/txtCodigoPedidoCuadroAceptar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="113dp"
        android:layout_height="21dp"
        android:layout_marginTop="56dp"
        android:text="Descripcion:"
        app:layout_constraintEnd_toStartOf="@+id/txtDescripcionCuadroPedido"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar pedido cliente"
        android:textColor="#F1EBEB"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView29"
        app:layout_constraintEnd_toStartOf="@+id/textView29"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <EditText
        android:id="@+id/txtNombreProductoCuadroAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese el nombre del producto"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtCodigoPedidoCuadroAceptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView31"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <EditText
        android:id="@+id/txtDescripcionCuadroPedido"
        android:layout_width="209dp"
        android:layout_height="42dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Ingrese una descripcion"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/txtCantidadPedidoCuadroAceptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView32"
        app:layout_constraintTop_toBottomOf="@+id/txtPrecioCuadroAceptarPedido" />

    <Button
        android:id="@+id/btnCancelarCuadroAceptarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        app:backgroundTint="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAceptarPedidoCuadroAceptarPedido" />

    <EditText
        android:id="@+id/txtCodigoPedidoCuadroAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese el codigo"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtPrecioCuadroAceptarPedido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView33"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreProductoCuadroAceptar" />

    <Button
        android:id="@+id/btnAceptarPedidoCuadroAceptarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        app:backgroundTint="#8BC34A"
        app:layout_constraintBottom_toTopOf="@+id/btnCancelarCuadroAceptarPedido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCantidadPedidoCuadroAceptar" />

    <EditText
        android:id="@+id/txtCantidadPedidoCuadroAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese la cantidad"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toTopOf="@+id/btnAceptarPedidoCuadroAceptarPedido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView35"
        app:layout_constraintTop_toBottomOf="@+id/txtDescripcionCuadroPedido" />
    " />

</androidx.constraintlayout.widget.ConstraintLayout>