<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activityParaClientes.MensajeriaGlobal">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.EnVivoApp.AppBarOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="300dp"
                        android:layout_height="42dp"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btnMensajeriaGlobalListarStremingsVendedor"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/btnMensajeriaGlobalMensajeriaGlobal"
                        android:layout_width="50sp"
                        android:layout_height="40sp"
                        app:icon="@drawable/ic_enviar_mensajes"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/textView38"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_Home_Mensajeria_Global"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_home"
                        android:text="Home"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btn_listar_vendedores_MensajeriaGlobal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_listar_vendedores"
                        android:text="Vendedores"
                        android:textSize="8sp" />

                        <Button
                            android:id="@+id/btn_carrito_listar_MensajeriaGlobal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/ic_carrito_compra"
                            android:text="Carrito"
                            android:textSize="8sp" />
                    <Button
                        android:id="@+id/btn_perfil_listar_MensajeriaGlobal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_persona"
                        android:text="Perfil"
                        android:textSize="8sp" />



                    <Button
                        android:id="@+id/btn_salir_MensajeriaGlobal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_persona_salir"
                        android:text="Salir"
                        android:textSize="8sp" />
                    </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtNombreVendedorMensajeriaGlobal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mensajeria"
            app:layout_constraintBottom_toTopOf="@+id/gridMensajeriaGlobal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btnImagenGlobalMensajeria"
            android:layout_width="62dp"
            android:layout_height="46dp"
            android:layout_marginBottom="5dp"
            app:icon="@drawable/ic_selecionar_imagen"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtMensajeMensajeriaGlobal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridMensajeriaGlobal"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gridMensajeriaGlobal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:isScrollContainer="false"
            android:scrollbars="none"
            android:smoothScrollbar="false"
            app:layout_constraintBottom_toTopOf="@+id/txtMensajeMensajeriaGlobal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.136"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreVendedorMensajeriaGlobal" />

        <EditText
            android:id="@+id/txtMensajeMensajeriaGlobal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginBottom="5dp"
            android:autoSizeTextType="uniform"
            android:gravity="top|left"
            android:inputType="textMultiLine|textCapSentences"
            android:lines="5"
            android:maxLines="10"
            android:minLines="1"

            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnEnviarMensajeriaGlobal"
            app:layout_constraintStart_toEndOf="@+id/btnImagenGlobalMensajeria"
            app:layout_constraintTop_toBottomOf="@+id/gridMensajeriaGlobal"
            app:layout_constraintVertical_bias="0.47" />

        <Button
            android:id="@+id/btnEnviarMensajeriaGlobal"
            android:layout_width="61dp"
            android:layout_height="54dp"
            android:layout_marginBottom="5dp"
            app:icon="@drawable/ic_enviar_mensajes"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtMensajeMensajeriaGlobal"
            app:layout_constraintTop_toBottomOf="@+id/gridMensajeriaGlobal" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>