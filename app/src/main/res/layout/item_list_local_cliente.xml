<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#ffffff">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del local:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNombreLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección del local"
                android:textStyle="bold" />


            <com.google.android.gms.maps.MapView
                android:id="@+id/mapItemListLocalCliente"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calle principal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCallePrincipalLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calle secundaria"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCalleSecundariaLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Referencia"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtReferenciaLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono del local"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTelefonoLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Celular del local"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCelularLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>