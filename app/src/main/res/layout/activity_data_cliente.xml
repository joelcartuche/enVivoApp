<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activityParaClientes.DataCliente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edite sus datos personales"

            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombres y apellidos:" />

        <EditText
            android:id="@+id/txtNombreCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese sus nombres"
            android:inputType="textPersonName"
            android:digits="aãâ áàbcçdeéfghiíjklmnoõôóòpqrstuvwxyzAÃÂÁÀBCÇDEÉFGHIÍJKLMNOÕÔÓÒPQRSTUVWXY"/>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección:" />

        <Button
            android:id="@+id/maximizarUbicacionDataCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione ubicación"
            app:cornerRadius="20dp"
            app:icon="@android:drawable/ic_dialog_map"
            app:iconGravity="start" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapDataCliente"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <Button
            android:id="@+id/minimizarUbicacionDataCliente"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            app:cornerRadius="30dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            app:icon="@drawable/ic_minimizar"
            app:iconGravity="start" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle principal" />

        <EditText
            android:id="@+id/txtcallePricipalDataCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Ingrese calle principal" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle secundaria" />

        <EditText
            android:id="@+id/txtcalleSecundariaDataCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Ingrese calle secundaria" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Referencia" />

        <EditText
            android:id="@+id/txtreferenciaDataCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Ingresar referencia"/>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cédula:" />

        <EditText
            android:id="@+id/txtCedulaCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese su número de cédula"
            android:inputType="numberSigned" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Celular:" />

        <EditText
            android:id="@+id/txtCelularCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese su número de celular"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono:" />

        <EditText
            android:id="@+id/txtTelefonoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese su número de teléfono"
            android:inputType="phone" />

                <Button
                    android:id="@+id/btnGuardarCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    app:backgroundTint="#00C853"
                    app:cornerRadius="20dp"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="start" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</LinearLayout>